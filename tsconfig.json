{
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "src/__mocks__/**/*.ts"
    ],
   "compilerOptions": {
       "target": "ES2022", 
       "module": "ES2022", 
       "allowSyntheticDefaultImports": true,
       "lib": ["es2022", "dom"],
       "moduleResolution": "node16",
       "esModuleInterop": true,
       "outDir": "./dist",
       "skipLibCheck": true
   }
}
